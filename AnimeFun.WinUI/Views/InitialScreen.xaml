<Page x:Class="AnimeFun.WinUI.Views.InitialScreen"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      x:Name="pageMain" Background="#EE4569" Loaded="PageMain_Loaded">

    <StackPanel x:Name="stpMain" HorizontalAlignment="Center" VerticalAlignment="Center">
        <StackPanel.RenderTransform>
            <TranslateTransform x:Name="trnMain" Y="0"/>
        </StackPanel.RenderTransform>
        <Grid Width="800" Height="600">
            <Image x:Name="imgLogoJpg" Source="/Assets/Images/Initial.jpg"/>
            <Image x:Name="imgLogoGif" Source="/Assets/Images/Initial.gif"/>
        </Grid>
        <ProgressRing x:Name="proRing" Height="40" Width="40" Foreground="#F2DAC1" IsActive="True" Visibility="Collapsed"/>
    </StackPanel>
</Page>
